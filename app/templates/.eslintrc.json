{
    "env": {
        "node": true,
        "browser": true,
        "es6": true
    },
    "parser": "babel-eslint",
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module",
        "allowImportExportEverywhere": true,
        "ecmaFeatures": {
            "jsx": true
        }
    },
    "globals": {
        "exampleGlobalVariable": true
    },
    "plugins": [],
    "extends": [
        "eslint:recommended"
    ],
    "rules": {
        "indent": [
            2, 4,
            { "SwitchCase": 1 }
        ],
        "no-var": "error"
    }
}
